<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="log_dir" value="/data/log/SpringBootMyBatis"/>

    <appender name="File" class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
        <file>${log_dir}/applog.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%-5level] %logger{36} - %msg%n
            </Pattern>
            <charset>UTF-8</charset>
        </encoder>

        <rollingPolicy class="ch.qos.logback.cor.rolling.TimeBaseRollingPolicy">
            <fileNamePatter>${log_dir}/applog.%d{yyyy-MM-dd}.log</fileNamePatter>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <Logger name="kopo.poly" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="File"/>
    </Logger>
</configuration>

